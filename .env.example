DATABASE_URL=file:./dev.db
# Desktop (Electron) builds override DATABASE_URL to app.getPath("userData")/singbetter.db automatically.
DISABLE_AUTH=true
AUTH_PROVIDER=local
SESSION_SECRET=change-me
USE_JSON_DB=false
UPLOADS_DRIVER=local
UPLOAD_SCAN_MODE=basic
# Optional override for local upload folder path
# UPLOADS_DIR=./uploads
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5000
HOST=127.0.0.1
PORT=5000
SUPPORT_EMAIL=support@example.com

# Feature flags (1=true, 0=false)
FEATURE_ONBOARDING=1
FEATURE_ANALYTICS=1
FEATURE_NOTIFICATIONS=1
FEATURE_MFA=1
FEATURE_LOCALIZATION=1
FEATURE_FEEDBACK=1
API_DOCS_ENABLED=1

# Rate limits
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120
RATE_LIMIT_AUTH_MAX=20

# Data retention windows
RETENTION_DAYS_AUDIT=90
RETENTION_DAYS_ANALYTICS=30

# S3 / R2 upload config (required only when UPLOADS_DRIVER=s3)
# S3_ENDPOINT=
# S3_BUCKET=
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_REGION=auto
# PUBLIC_UPLOADS_BASE_URL=

# Production / Replit Auth (only required when auth is enabled)
# REPL_ID=
# ISSUER_URL=https://replit.com/oidc
# METRICS_TOKEN=

# AssemblyAI API key for transcription
# ASSEMBLYAI_API_KEY=
